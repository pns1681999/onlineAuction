{{#if this.empty}} 
  <div class="card-body"> 
    <p class="card-text"> Không có dữ liệu. </p> 
  </div> 
{{else}} 
  <table class="table table-hover"> 
    <thead> 
      <tr> 
        <th scope="col" class="text-center">ID</th> 
        <th scope="col">Tên Danh Mục</th> 
        <th scope="col">Thuộc Danh Mục</th> 
      </tr> 
    </thead> 
    <tbody> 
      {{#each this.danhmuc}} 
      <tr> 
        <th scope="row" class="text-center">{{IdDanhMuc}}</th> 
        <td>{{TenDanhMuc}}</td> 
        <td>{{ThuocDanhMuc}}</td>
        <td> <a href="/admin/category/detail/{{IdDanhMuc}}">Xem chi tiết</a></td>
        <td> <a href="/admin/category/update/{{IdDanhMuc}}">Sửa</a></td>
        <td> <a href="/admin/category/delete/{{IdDanhMuc}}">Xóa</a></td>
      </tr> 
      {{/each}} 
    </tbody> 
  </table> 
{{/if}}